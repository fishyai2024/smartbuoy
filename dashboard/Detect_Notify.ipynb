import pandas as pd
import smtplib
from email.mime.text import MIMEText
from email.mime.multipart import MIMEMultipart

# Email configuration
SMTP_SERVER = 'smtp.gmail.com'           # SMTP server (Gmail example)
SMTP_PORT = 587                          # Port for TLS
